{
    "name": "danielribes/snakes-and-ladders",
    "version": "1.0.0",
    "description": "Kata SnakesAndLadders amb PHP i Behat",
    "require": {
        "php": "^8.5",
        "symfony/console": "^7.2"
    },
    "require-dev": {
        "behat/behat": "^3.15",
        "webmozart/assert": "^1.11"
    },
    "license": "MIT",
    "config": {
        "bin-dir": "bin",
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "authors": [
        {
            "name": "Daniel Ribes",
            "email": "daniel@danielribes.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "SnakesAndLadders\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SnakesAndLadders\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
